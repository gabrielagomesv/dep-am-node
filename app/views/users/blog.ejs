      <% for(var i = 0; i < postagem.length; i++) { %>
        <div class="blog-post mb-5">
          <h2 class="blog-post-title title_item"><%= postagem[i].nm_titulo %></h2>
          <p class="blog-post-meta"><%= postagem[i].nm_autor %></p>
          <hr>
          <p><%= postagem[i].ds_postagem %></p>
          <a href="#" class="badge badge-secondary">Beleza</a>
          <a href="#" class="badge badge-secondary">Saúde</a>
